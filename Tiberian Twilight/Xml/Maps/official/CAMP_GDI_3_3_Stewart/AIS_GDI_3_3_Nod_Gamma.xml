	<AIStrategicStateDefinition
		id="AIState_GDI_3_3_Nod_Gamma_CrawlerController"
		MaxInactiveCopies="1"
		PathfindingCheckType="None"
		TargetHeuristicReevaluationInterval="PERIODICALLY"
		TargetHeuristicReevaluationTime="15s"
		CreateMcvPowerCanUse="true"	>
		<Heuristic>
			<ScriptedFlagHeuristic FlagName="AIFLAG_GDI_3_3_Nod_Gamma_CrawlerControl"/>
		</Heuristic>
		<!-- Note that this target heuristic is called again every few seconds to keep updating the position -->
		<TargetHeuristic TargetHeuristic="AITarget_GDI_3_3_Nod_Gamma_A" Priority="15"/>
		<TargetHeuristic TargetHeuristic="AITarget_GDI_3_3_Nod_Gamma_B" Priority="15"/>
		<TargetHeuristic TargetHeuristic="AITarget_GDI_3_3_Nod_Gamma_C" Priority="15"/>
		<!-- <TargetHeuristic TargetHeuristic="FriendlyLandStructureHeuristic" Priority="20"/> -->
