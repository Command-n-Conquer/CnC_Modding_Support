			DamageFX="InfantryDamageFX" />
		<LocomotorSet
			Locomotor="HumanLocomotor"
			Condition="NORMAL"
			Speed="50" />
		<Draws>
			<ScriptedModelDraw
				id="ModuleTag_Draw"
				OkToChangeModelColor="true">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="GUCEngineer_SKN" />
				</ModelConditionState>
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="INSIDE_GARRISON">
					<Model
						Name="" />
				</ModelConditionState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="FORMATION_PREVIEW">
					<!-- no anim -->
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_DEFAULT"
					Flags="RESTART_ANIM_WHEN_COMPLETE"
					AllowRepeatInRandomPick="true"
					StateName="STATE_Bored">
					<Animation
						AnimationName="GUEngineer_BIDA"
						AnimationMode="ONCE"
						AnimationPriority="10" />
					<Animation
						AnimationName="GUEngineer_BIFA"
						AnimationMode="ONCE"
						AnimationPriority="1" />
					<Animation
						AnimationName="GUEngineer_BIFB"
						AnimationMode="ONCE"
						AnimationPriority="5" />
					<Animation
						AnimationName="GUEngineer_BIFC"
						AnimationMode="ONCE"
						AnimationPriority="5" />
					<Animation
						AnimationName="GUEngineer_BIFD"
						AnimationMode="ONCE"
						AnimationPriority="1" />
					<Script>
						Prev = CurDrawablePrevAnimationState()
						if Prev == "STATE_Selected" then
						CurDrawableSetTransitionAnimState("TRANS_attentionToBored")
						end
						if Prev == "STATE_stunned_flailing" then
						CurDrawableSetTransitionAnimState("STATE_stunned_landing")
						end
					</Script>
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="STUNNED_FLAILING"
					StateName="STATE_stunned_flailing">
					<Animation
						AnimationName="GUEngineer_FLYA"
						AnimationMode="LOOP" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					StateName="STATE_stunned_landing">
					<Animation
						AnimationName="GUEngineer_LNDA"
						AnimationMode="ONCE" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="FRONTCRUSHED">
					<Animation
						AnimationName="GUEngineer_CDTA"
						AnimationMode="ONCE" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="BACKCRUSHED">
					<Animation
						AnimationName="GUEngineer_CDTB"
						AnimationMode="ONCE" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="DYING">
					<Animation
						AnimNickName="DTA"
						AnimationName="GUEngineer_DIEA"
						AnimationMode="ONCE" />
				</AnimationState>

				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="FIRING_OR_PREATTACK_A">
					<Animation
						AnimationName="GUCEngineer_ATKA2"
						AnimationMode="LOOP" />
					<Script>
						CurDrawableShowSubObject("LASER")
						CurDrawableHideSubObject("GUN_BUTT")
					</Script>
				</AnimationState>


				<!--Supressed-->
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="MOVING"
					Flags="RANDOMSTART">
					<Animation
						AnimationName="GUEngineer_RUNA"
						AnimationMode="LOOP"
						AnimationSpeedFactorMin="1.0"
						AnimationSpeedFactorMax="1.0" />
				</AnimationState>
				<!-- EMOTIONS -->
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="EMOTION_CELEBRATING"
					Flags="RESTART_ANIM_WHEN_COMPLETE">
					<Animation
						AnimationName="GUEngineer_CHRA"
						AnimationMode="ONCE" />
					<Animation
						AnimationName="GUEngineer_CHRB"
						AnimationMode="ONCE" />
				</AnimationState>
				<!--Selected-->
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="SELECTED"
					Flags="RESTART_ANIM_WHEN_COMPLETE"
					StateName="STATE_Selected">
					<Animation
						AnimationName="GUEngineer_AIDA"
						AnimationMode="ONCE"
						AnimationPriority="15"
						AnimationBlendTime="5"
						AnimationMustCompleteBlend="true" />
					<Animation
						AnimationName="GUEngineer_AIFA"
						AnimationMode="ONCE"
						AnimationPriority="5"
						AnimationBlendTime="5"
						AnimationMustCompleteBlend="true" />
					<Animation
						AnimationName="GUEngineer_AIFB"
						AnimationMode="ONCE"
						AnimationPriority="5"
						AnimationBlendTime="5"
						AnimationMustCompleteBlend="true" />
					<Animation
						AnimationName="GUEngineer_AIFC"
						AnimationMode="ONCE"
						AnimationPriority="2"
						AnimationBlendTime="5"
						AnimationMustCompleteBlend="true" />
					<Script>
						Prev = CurDrawablePrevAnimationState()
						if Prev == "STATE_Bored" then
						CurDrawableSetTransitionAnimState("TRANS_boredToAttention")
						end
					</Script>
				</AnimationState>
				<!-- TRANSITIONS -->
				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="TRANS_boredToAttention">
					<Animation
						AnimationName="GUEngineer_BATA"
						AnimationMode="ONCE" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="TRANS_attentionToBored">
					<Animation
						AnimationName="GUEngineer_ABTA"
						AnimationMode="ONCE" />
				</AnimationState>
			</ScriptedModelDraw>
			<TracerModelDraw
				id="ModuleTag_TracerModelDraw"
				MinLength="50.0"
				MaxLength="50.0"
				Width="3.0"
				MinSpeed="30"
				MaxSpeed="30"
				SweepSpeed="1.0"
				SpreadAngle="2.0"
				MinTracersPerFrame="0.2"
				MaxTracersPerFrame="0.3"
				FrameLifeTime="35"
				WeaponSlotType="PRIMARY_WEAPON"
				Texture="FXTracerGDI"
