				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="INSIDE_GARRISON">
					<Model
						Name="GUGarGun" />
					<WeaponFireFXBone
						WeaponSlotType="PRIMARY_WEAPON"
						BoneName="BONE01" />
					<WeaponLaunchBone
						WeaponSlotType="PRIMARY_WEAPON"
						BoneName="BONE01" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="WEAPONSET_PLAYER_UPGRADE">
					<Model
						Name="NUEnlightenedU_SKN" />
				</ModelConditionState>
				
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="INSIDE_GARRISON">
					<!-- no anim -->
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_DEFAULT"
					Flags="RESTART_ANIM_WHEN_COMPLETE"
					AllowRepeatInRandomPick="true"
					StateName="STATE_Idle">
					<Animation
						AnimationName="NUSilent_BIDA"
						AnimationMode="ONCE"
						AnimationBlendTime="30"
						AnimationPriority="30"
						AnimationSpeedFactorMin="0.8"
						AnimationSpeedFactorMax="1.2" />
					<Animation
						AnimationName="NUSilent_BIDB"
						AnimationMode="ONCE"
						AnimationBlendTime="30"
						AnimationPriority="30"
						AnimationSpeedFactorMin="0.8"
						AnimationSpeedFactorMax="1.2" />
					<Animation
						AnimationName="NUSilent_BIFA"
						AnimationMode="ONCE"
						AnimationBlendTime="30"
						AnimationPriority="5"
						AnimationSpeedFactorMin="0.8"
						AnimationSpeedFactorMax="1.2" />
					<Animation
						AnimationName="NUSilent_BIFB"
						AnimationMode="ONCE"
						AnimationBlendTime="30"
						AnimationPriority="5"
						AnimationSpeedFactorMin="0.8"
						AnimationSpeedFactorMax="1.2" />
					<Script>
						Prev = CurDrawablePrevAnimationState()
						if Prev == "STATE_stunned_flailing" then
						CurDrawableSetTransitionAnimState("STATE_stunned_landing")
						end
						if Prev == "STATE_Selected" then
						CurDrawableSetTransitionAnimState("TRANS_SelectedToIdle")
						end
					</Script>
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="STUNNED_FLAILING"
					StateName="STATE_stunned_flailing">
					<Animation
						AnimationName="NUSilent_FLYA"
						AnimationMode="LOOP" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					StateName="STATE_stunned_landing">
					<Animation
						AnimationName="NUSilent_LNDA"
						AnimationMode="ONCE" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="FRONTCRUSHED">
					<Animation
						AnimationName="NUSilent_CDTA"
						AnimationMode="ONCE" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="BACKCRUSHED">
					<Animation
						AnimationName="NUSilent_CDTA"
						AnimationMode="ONCE" />
				</AnimationState>

				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="DYING">
					<Animation
						AnimNickName="DTA"
						AnimationName="NUSilent_DIEA"
						AnimationMode="ONCE" />
					<Animation
						AnimNickName="DTA"
						AnimationName="NUSilent_DIEB"
						AnimationMode="ONCE" />
					<Animation
						AnimNickName="DTA"
						AnimationName="NUSilent_DIEC"
						AnimationMode="ONCE" />
				</AnimationState>
				
				
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="MOVING USING_WEAPON_A"
					Flags="RANDOMSTART">
					<Animation
						UseWeaponTiming="true"
						AnimationName="NUSilent_ATRA"
						AnimationMode="LOOP" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="FIRING_OR_PREATTACK_A">
					<Animation					
						AnimationName="NUSilent_ATKA"
						AnimationMode="ONCE" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="MOVING ATTACKING">
					<Animation
						AnimationName="NUSilent_RUNA"
						AnimationMode="LOOP" />
					<Animation
						AnimationName="NUSilent_RUNB"
						AnimationMode="LOOP" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="ATTACKING"
					StateName="STATE_SelectedPose">
					<Animation
						AnimationName="NUSilent_ATKA"
						AnimationMode="MANUAL" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="MOVING"
					Flags="RANDOMSTART">
					<Animation
						AnimationName="NUSilent_RUNA"
						AnimationMode="LOOP" />
					<Animation
						AnimationName="NUSilent_RUNA"
						AnimationMode="LOOP" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="SELECTED"
					Flags="RESTART_ANIM_WHEN_COMPLETE"
					AllowRepeatInRandomPick="true"
					StateName="STATE_Selected">
					<Animation
						AnimationName="NUSilent_AIDA"
						AnimationMode="ONCE"
						AnimationBlendTime="30"
						AnimationPriority="30"/>
					<Animation
						AnimationName="NUSilent_AIDB"
						AnimationMode="ONCE"
						AnimationBlendTime="30"
						AnimationPriority="30"/>
					<Animation
						AnimationName="NUSilent_AIFA"
						AnimationMode="ONCE"
						AnimationBlendTime="30"
						AnimationPriority="10"/>
					<Animation
						AnimationName="NUSilent_AIFB"
						AnimationMode="ONCE"
						AnimationBlendTime="30"
						AnimationPriority="10"/>
					<Animation
						AnimationName="NUSilent_AIFC"
						AnimationMode="ONCE"
						AnimationBlendTime="30"
						AnimationPriority="5"
						AnimationSpeedFactorMin="0.8"
						AnimationSpeedFactorMax="1.2" />

					<Script>
						Prev = CurDrawablePrevAnimationState()
						if Prev == "STATE_Idle" then
						CurDrawableSetTransitionAnimState("TRANS_IdleToSelected")
						end
					</Script>
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="TRANS_IdleToSelected">
					<Animation
						AnimationName="NUSilent_BATB"
						AnimationMode="ONCE"
						AnimationSpeedFactorMin="0.9"
						AnimationSpeedFactorMax="1.1" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="TRANS_SelectedToIdle">
					<Animation
						AnimationName="NUSilent_ABTA"
						AnimationMode="ONCE"
						AnimationSpeedFactorMin="0.9"
						AnimationSpeedFactorMax="1.1" />
					<Animation
						AnimationName="NUSilent_ABTB"
						AnimationMode="ONCE"
						AnimationSpeedFactorMin="0.9"
						AnimationSpeedFactorMax="1.1" />
				</AnimationState>
				
