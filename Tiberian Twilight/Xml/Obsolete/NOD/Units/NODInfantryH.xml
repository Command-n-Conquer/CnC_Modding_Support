	<GameObject
		id="NODInfantryH"
		inheritFrom="BaseInfantry"
		SelectPortrait="Portrait_NOD_Infantry_H"
		ButtonImage="Btn_NOD_Infantry_H"
		Side="NOD"
		EditorSorting="UNIT"
		TransportSlotCount="1"
		BuildTime="0.1"
		CommandSet="NODInfantryHCommandSet"
		IsTrainable="true"
		RadarPriority="UNIT"
		UnitCategory="INFANTRY"
		WeaponCategory="MISSILE"
		VoicePriority="92"
		CrowdResponse="NOD_Infantry"
		EditorName="NODInfantryH"
		Description="Desc:NODMilitantRocket"
		TypeDescription="Type:NODMilitantRocket">
		<ObjectResourceInfo>
			<BuildCost Account="=$ACCOUNT_CREDIT" Amount="225"/>
		</ObjectResourceInfo>
		<DisplayName
			xai:joinAction="Replace" xmlns:xai="uri:ea.com:eala:asset:instance">Name:NODMilitantRocket</DisplayName>
		<DisplayUpgrade>Upgrade_TiberiumInfusion</DisplayUpgrade>
		<DisplayUpgrade>Upgrade_NODConfessorUpgrade</DisplayUpgrade>
		<ArmorSet
			Armor="NODInfantryHArmor"
			DamageFX="InfantryDamageFX" />
		<LocomotorSet
			Locomotor="HumanLocomotor"
			Condition="NORMAL"
			Speed="60" />
		<SkirmishAIInformation
			UnitBuilderStandardCombatUnit="true" />
		<Draws>
			<ScriptedModelDraw
				id="ModuleTag_Draw"
				OkToChangeModelColor="true">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="NU_RktTem_SKN" />
					<WeaponFireFXBone
						WeaponSlotType="PRIMARY_WEAPON"
						BoneName="B_WEAPONA_FX" />
					<WeaponLaunchBone
						WeaponSlotType="PRIMARY_WEAPON"
						BoneName="B_WEAPONA_FX" />
				</ModelConditionState>
				<xi:include
					href="DATA:Includes/GDIUnitFormationPreviewStates.xml"
					xpointer="xmlns(n=uri:ea.com:eala:asset) xpointer(/n:FormationPreviewStates/child::*)" />
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="INSIDE_GARRISON">
					<Model
						Name="NUGar_Rock" />
					<WeaponFireFXBone
						WeaponSlotType="PRIMARY_WEAPON"
						BoneName="B_WEAPONA_FX" />
					<WeaponLaunchBone
						WeaponSlotType="PRIMARY_WEAPON"
						BoneName="B_WEAPONA_FX" />
				</ModelConditionState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="INSIDE_GARRISON">
					<!-- no anim -->
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_DEFAULT"
					StateName="STATE_bored"
					Flags="RESTART_ANIM_WHEN_COMPLETE">
					<Animation
						AnimationName="NU_RktTem_BIDA"
						AnimationMode="ONCE"
						AnimationPriority="10"
						AnimationBlendTime="15" />
					<Animation
						AnimationName="NU_RktTem_BIDB"
						AnimationMode="ONCE"
						AnimationPriority="10"
						AnimationBlendTime="15" />
					<Animation
						AnimationName="NU_RktTem_BIDC"
						AnimationMode="ONCE"
						AnimationPriority="10"
						AnimationBlendTime="15" />
					<Animation
						AnimationName="NU_RktTem_BIFA"
						AnimationMode="ONCE"
						AnimationPriority="5"
						AnimationBlendTime="15" />
					<Animation
						AnimationName="NU_RktTem_BIFB"
						AnimationMode="ONCE"
						AnimationPriority="5"
						AnimationBlendTime="15" />
					<Animation
						AnimationName="NU_RktTem_BIFC"
						AnimationMode="ONCE"
						AnimationPriority="1"
						AnimationBlendTime="15" />
					<Animation
						AnimationName="NU_RktTem_BIFD"
						AnimationMode="ONCE"
						AnimationPriority="5"
						AnimationBlendTime="15" />
					<Script>
						Prev = CurDrawablePrevAnimationState()
						if Prev == "STATE_SelectedPose" then
						CurDrawableSetTransitionAnimState("TRANS_SelectedToIdle")
						end
						if Prev == "STATE_stunned_flailing" then
						CurDrawableSetTransitionAnimState("STATE_stunned_landing")
						end
					</Script>
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="STUNNED_FLAILING"
					StateName="STATE_stunned_flailing">
					<Animation
						AnimationName="NU_RktTem_FLYA"
						AnimationMode="LOOP" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					StateName="STATE_stunned_landing">
					<Animation
						AnimationName="NU_RktTem_LNDA"
						AnimationMode="ONCE" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="FRONTCRUSHED">
					<Animation
						AnimationName="NU_RktTem_CDTA"
						AnimationMode="ONCE" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="BACKCRUSHED">
					<Animation
						AnimationName="NU_RktTem_CDTB"
						AnimationMode="ONCE" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="DYING">
					<Animation
						AnimationName="NU_RktTem_DIEA"
						AnimationMode="ONCE" />
					<Animation
						AnimationName="NU_RktTem_DIEB"
						AnimationMode="ONCE" />
					<Animation
						AnimationName="NU_RktTem_DIEC"
						AnimationMode="ONCE" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="MOVING FIRING_OR_PREATTACK_A"
					Flags="RANDOMSTART">
					<Animation
						AnimationName="NU_RktTem_ATRA"
						AnimationMode="LOOP"
						Distance="75" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="MOVING"
					Flags="RANDOMSTART">
					<Animation
						AnimationName="NU_RktTem_RUNA"
						AnimationMode="LOOP"
						Distance="75" />
					<Animation
						AnimationName="NU_RktTem_RUNB"
						AnimationMode="LOOP"
						Distance="30" />
					<Animation
						AnimationName="NU_RktTem_RUNC"
						AnimationMode="LOOP"
						Distance="60" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="USING_WEAPON_A AIM_HIGH FIRING_OR_PREATTACK_A"
					FrameForPristineBonePositions="8">
					<Animation
						AnimationName="NU_RktTem_ATKB"
						AnimationMode="ONCE"
						AnimationBlendTime="10" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="AIM_HIGH ATTACKING">
					<Animation
						AnimationName="NU_RktTem_ATKB"
						AnimationMode="MANUAL"
						AnimationBlendTime="10" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="FIRING_OR_PREATTACK_A"
					FrameForPristineBonePositions="4">
					<Animation
						AnimationName="NU_RktTem_ATKA"
						AnimationMode="ONCE" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="ATTACKING"
					StateName="STATE_SelectedPose">
					<Animation
						AnimationName="NU_RktTem_AIDA"
						AnimationMode="LOOP" />
				</AnimationState>
				<!-- SELECTED -->
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="SELECTED"
					StateName="STATE_SelectedPose"
					Flags="RESTART_ANIM_WHEN_COMPLETE">
					<Animation
						AnimationName="NU_RktTem_AIDA"
						AnimationMode="ONCE"
						AnimationBlendTime="15"
						AnimationPriority="15" />
					<Animation
						AnimationName="NU_RktTem_AIDB"
						AnimationMode="ONCE"
						AnimationBlendTime="15"
						AnimationPriority="15" />
					<Animation
						AnimationName="NU_RktTem_AIFA"
						AnimationMode="ONCE"
						AnimationBlendTime="15"
						AnimationPriority="3" />
					<Animation
						AnimationName="NU_RktTem_AIFB"
						AnimationMode="ONCE"
						AnimationBlendTime="15"
						AnimationPriority="3" />
					<Animation
						AnimationName="NU_RktTem_AIFC"
						AnimationMode="ONCE"
						AnimationBlendTime="10"
						AnimationPriority="3" />
					<Script>
						Prev = CurDrawablePrevAnimationState()
						if Prev == "STATE_bored" then
						CurDrawableSetTransitionAnimState("TRANS_boredToAttention")
						end
					</Script>
				</AnimationState>
				<!-- EMOTIONS -->
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="EMOTION_CELEBRATING"
					Flags="RESTART_ANIM_WHEN_COMPLETE">
					<Animation
						AnimationName="NU_RktTem_CHRA"
						AnimationMode="ONCE"
						AnimationSpeedFactorMin="0.8"
						AnimationSpeedFactorMax="1.2" />
					<Animation
						AnimationName="NU_RktTem_CHRB"
						AnimationMode="ONCE"
						AnimationSpeedFactorMin="0.8"
						AnimationSpeedFactorMax="1.2" />
					<Animation
						AnimationName="NU_RktTem_CHRC"
						AnimationMode="ONCE"
						AnimationSpeedFactorMin="0.8"
						AnimationSpeedFactorMax="1.2" />
				</AnimationState>
				<!-- TRANSITIONS -->
				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="TRANS_boredToAttention">
					<Animation
						AnimationName="NU_RktTem_BATA"
						AnimationMode="ONCE"
						AnimationSpeedFactorMin="0.9"
						AnimationSpeedFactorMax="1.1" />
					<Animation
						AnimationName="NU_RktTem_BATB"
						AnimationMode="ONCE"
						AnimationSpeedFactorMin="0.9"
						AnimationSpeedFactorMax="1.1" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="TRANS_SelectedToIdle">
					<Animation
						AnimationName="NU_RktTem_ABTA"
						AnimationMode="ONCE"
						AnimationSpeedFactorMin="0.9"
						AnimationSpeedFactorMax="1.1" />
					<Animation
						AnimationName="NU_RktTem_ABTB"
						AnimationMode="ONCE"
						AnimationSpeedFactorMin="0.9"
						AnimationSpeedFactorMax="1.1" />
				</AnimationState>
			</ScriptedModelDraw>
		</Draws>
		<Behaviors>
			<WeaponSetUpdate
				id="ModuleTag_WeaponSetUpdate">
				<WeaponSlotHardpoint
					ID="1"
					AllowInterleavedFiring="false"
					InterleavedStyle="INTERLEAVE_FIRST_AVAILABLE"
					WeaponChoiceCriteria="PREFER_MOST_DAMAGE">
					<Weapon
						Ordering="PRIMARY_WEAPON"
						Template="NODInfantryHWeapon" />
				</WeaponSlotHardpoint>
			</WeaponSetUpdate>
			<Physics
				id="ModuleTag_07" />
			<SlowDeath
				id="ModuleTag_Death"
				SinkDelay="3s"
				SinkRate="2.4"
				DestructionDelay="4.5s">
				<DieMuxData
					DeathTypes="ALL" />
				<Sound
					Type="INITIAL"
					List="NOD_Generic_VoiceDieMS" />
			</SlowDeath>
			<!--Tiberium Infusion Armor Upgrade-->
			<xi:include
				href="DATA:Includes/NODTiberiumInfusionArmorUpgrade.xml" />
			<StatusBitsUpgrade
				id="ModuleTag_VeterancyUpgrade"
				StatusToSet="WEAPON_UPGRADED_01">
				<TriggeredBy>Upgrade_Veterancy_HEROIC</TriggeredBy>
			</StatusBitsUpgrade>
			<AudioLoopUpgrade
				id="TiberiumInfusionUpgradeSound"
				SoundToPlay="NOD_TiberiumUpgrade">
				<TriggeredBy>Upgrade_TiberiumInfusion</TriggeredBy>
			</AudioLoopUpgrade>
			<AudioLoopUpgrade
				id="NODConfessorUpgradeSound"
				SoundToPlay="NOD_Confessor_Upgrade">
				<TriggeredBy>Upgrade_NODConfessorUpgrade</TriggeredBy>
			</AudioLoopUpgrade>

		</Behaviors>
			
		<AI>
			<AIUpdate
				id="ModuleTag_06"
				AutoAcquireEnemiesWhenIdle="YES"
				StateMachine="UnitAIStateMachine">
				<UnitAITargetChooserData
					SympathyRange="100.0" />
			</AIUpdate>
		</AI>
		<Body>
			<ActiveBody
				id="ModuleTag_03"
				MaxHealth="400" />
		</Body>
    <ClientUpdates>
      <LargeGroupAudioClientUpdate
				id="LGAU">
        <Key>GDI_MissileSoldier</Key>
      </LargeGroupAudioClientUpdate>      
    </ClientUpdates>
		<ClientBehaviors>
			<ModelConditionAudioLoopClientBehavior
				id="ModuleTag_NOD_Infantry_VoiceEffortDelayedLoop">
				<ModelConditionSound
					Sound="NOD_Infantry_VoiceEffortDelayedLoop"
					RequiredFlags="USING_WEAPON_A"
					ExcludedFlags="DYING" />
			</ModelConditionAudioLoopClientBehavior>
		</ClientBehaviors>
		<Geometry
			IsSmall="true">
			<Shape
				Type="CYLINDER"
				MajorRadius="7.0"
				Height="13.0"
				ContactPointGeneration="INFANTRY" />
		</Geometry>
