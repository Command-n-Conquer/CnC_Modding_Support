<?xml version="1.0" encoding="utf-8"?>
<AssetDeclaration xmlns="uri:ea.com:eala:asset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xi="http://www.w3.org/2001/XInclude">
	<Tags></Tags>
	<Includes>
		<Include
			type="all"
			source="ART:POBird_SKN.w3x" />
		<Include
			type="all"
			source="ART:POBird_FLYA.w3x" />
    <Include
			type="all"
			source="ART:POBird_TRNL.w3x" />
    <Include
			type="all"
			source="ART:POBird_TRNR.w3x" />
	</Includes>
	<GameObject
		id="POBird01"
		Side="Civilian"
		EditorSorting="UNIT"
		RadarPriority="NOT_ON_RADAR"
		EditorName="POBird01"
		CommandSet="EmptyCommandSet"
		KindOf="PRELOAD NO_COLLIDE CAN_CAST_REFLECTIONS AIRCRAFT"
		Description="Desc:Bird">
		<DisplayName>Bird</DisplayName>
		<ArmorSet
			Armor="NoArmor" />
		<Draws>
			<ScriptedModelDraw
				id="ModuleTag_Draw"
				OkToChangeModelColor="false">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="POBird_SKN" />
				</ModelConditionState>
				<AnimationState
					ParseCondStateType="PARSE_DEFAULT">
					<Animation
						AnimationName="POBird_FLYA"
						AnimationMode="LOOP"
						AnimationSpeedFactorMin="1.2"
						AnimationSpeedFactorMax="1.4"
            AnimationBlendTime="15" />
				</AnimationState>

        <AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="TURN_LEFT"
					StateName="STATE_moving">
          <Animation
						AnimationName="POBird_TRNL"
						AnimationMode="LOOP"
						AnimationBlendTime="15" />
        </AnimationState>

        <AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="TURN_RIGHT MOVING"
					StateName="STATE_moving">
          <Animation
						AnimationName="POBird_TRNR"
						AnimationMode="LOOP"
						AnimationBlendTime="15" />
        </AnimationState>
        
			</ScriptedModelDraw>
		</Draws>
		<Behaviors>
			<Physics
				id="ModuleTag_Physics" />
		</Behaviors>
		<AI>
			<!-- We should not be using this AI, it was depricated
				 JetAIUpdate
				id="ModuleTag_AI"
				AutoAcquireEnemiesWhenIdle="NO">
				<LockonInfo />
			</JetAIUpdate-->
		</AI>
		<Body>
			<ActiveBody
				id="ModuleTag_Body"
				MaxHealth="200.0" />
		</Body>
		<Geometry
			IsSmall="true">
			<Shape
				Type="SPHERE"
				MajorRadius="7.0"/>
		</Geometry>
	</GameObject>
</AssetDeclaration>